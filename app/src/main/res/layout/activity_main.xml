<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="start"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/oxygenie_transparentlogo" />

    <LinearLayout
        android:id="@+id/toolbarControlLayout"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/btnRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="5dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="@color/black"
            android:background="@color/white"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/icSettings"
            android:onClick="navigateToSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center_vertical"
            android:src="@android:drawable/ic_menu_preferences"
            app:tint="@color/black"
            android:background="@color/white"
            android:visibility="visible"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/connectionLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarControlLayout"
        android:layout_marginTop="10dp"
        android:baselineAligned="true">

        <TextView
            android:id="@+id/currentIPAddressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="192.02.52"
            android:textSize="24sp"
            />


        <Button
            android:id="@+id/btn_connect"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:text="Connect"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/connectionLayout"
        android:layout_marginBottom="100dp">
    <LinearLayout
        android:id="@+id/paramsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:alpha="0.0"
        android:animateLayoutChanges="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/humidityCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paramLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="17dp">

                <TextView
                    android:id="@+id/lblHumidityParam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textHumidityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="good"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/waterCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/waterParamLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="17dp">

                <TextView
                    android:id="@+id/lblWaterParam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textWaterValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="50%"
                    android:textColor="@color/yellow"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/oxygenCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paramLayout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="17dp">

                <TextView
                    android:id="@+id/lblOxygenParam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oxygen"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textOxygenValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="30%"
                    android:textColor="@color/red"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/darknessCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paramLayout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="17dp">

                <TextView
                    android:id="@+id/lblDarknessParam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Darkness"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textDarknessValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="HIGH"
                    android:textColor="@color/teal_700"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ledCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            app:cardBackgroundColor="#FDFDFD"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:clickable="true"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paramLayout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                >
                <TextView
                    android:id="@+id/lblLEDParam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LEDs"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textLEDValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="OFF"
                    android:textColor="@color/red"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ledControlCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="100dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.0"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="15dp">

            <TextView
                android:id="@+id/lblLedControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Control Lights"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLedON"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:text="LED ON" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLedOFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:text="led off" />
            </LinearLayout>


            <com.google.android.material.slider.Slider
                android:id="@+id/ledSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="5"
                android:valueFrom="0"
                android:valueTo="100"
                app:trackHeight="15dp" />

            <TextView
                android:id="@+id/btnCloseLedControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="close"
                android:textSize="20sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/teal_700"
                android:clickable="true"
                android:textStyle="bold|italic"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pumpsControlCV"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="100dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.0"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="30dp">

            <TextView
                android:id="@+id/lblPumpControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Control Pumps"
                android:textSize="24sp"
                android:textAlignment="center"
                android:layout_marginBottom="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    >

                    <EditText
                        android:id="@+id/inputMilisWater"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/hint"
                        android:hint="250"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ml"
                        android:layout_marginLeft="5dp"
                        />

                </LinearLayout>



                <Spinner
                    android:id="@+id/spinnerPumps"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="200dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/btnClosePumpsControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:clickable="true"
                android:text="close"
                android:textAlignment="center"
                android:textColor="@color/teal_700"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <View
        android:id="@+id/bgTransparentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/black"
        android:alpha="0"
        />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ledControlCV" />

</androidx.constraintlayout.widget.ConstraintLayout>